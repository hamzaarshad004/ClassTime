<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff"/>
                    <corners android:radius="10dp" />
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />
                    <stroke
                        android:width="2dp"
                        android:color="#3bbdfa"
                        />
                </shape>
            </item>
            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/calender"/>

            </item>
        </layer-list>

    </item>
</selector>